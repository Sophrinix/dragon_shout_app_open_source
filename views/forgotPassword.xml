<Alloy>
	<NavigationWindow id="navWindow">
		<Window id="window">
			<RightNavButton>
	            <Button id="closeButton">Close</Button>
	        </RightNavButton>

			<ScrollView id="wrapper" layout="vertical">
				<TextField id="email" hintText="email..." />

				<Button id="reset">Send</Button>

				<View id="content">
					<Label class="textBody">After you hit send, please check your email for password reset instructions.</Label>
				</View>
			</ScrollView>
		</Window>
	</NavigationWindow>
</Alloy>